#page-nav
  width 100%
  margin-top 2em
  font-size 1.3em
  display flex
  flex-wrap wrap
  justify-content flex-start

  .page-number
  .extend
    text-decoration none
    color $font-default-color
    padding .2em .5em
    
    &:hover
      background-color $color-primary
      color $color-secondary

  .current
    background-color $font-default-color
    color $color-secondary
    &:hover
      background-color $font-default-color
  