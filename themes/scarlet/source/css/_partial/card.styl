.card-container
  width 100%
  display flex
  flex-direction column
  flex-wrap wrap

  .card
    width 100%
    box-sizing border-box
    padding 1em
    margin 0 0 1em 0
    background-color $color-secondary
    border-radius 10px
    display flex
    flex-direction column
    justify-content space-between

    .card-img 
      width 100%
    
    .card-tech-list
      width 100%
      display flex
      flex-wrap wrap
      margin-top .5em

      .card-tech
        list-style none
        background-color $color-primary
        color #ffffff
        padding .5em
        margin 0 .5em .5em 0
        border-radius 5px

    .card-link
      color $color-primary

@media (min-width 768px)
  .card-container
    flex-direction row
    justify-content space-between

    .card
      width 49%